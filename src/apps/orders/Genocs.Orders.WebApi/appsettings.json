{
  "app": {
    "name": "Orders Service",
    "service": "orders-service",
    "instance": "000001",
    "version": "v1.0",
    "displayBanner": true,
    "displayVersion": true
  },
  "consul": {
    "enabled": true,
    "url": "http://localhost:8500",
    "service": "orders-service",
    "address": "docker.for.mac.localhost",
    "port": "5531",
    "pingEnabled": true,
    "pingEndpoint": "alive",
    "pingInterval": 15,
    "removeAfterInterval": 17
  },
  "fabio": {
    "enabled": true,
    "url": "http://localhost:9999",
    "service": "orders-service"
  },
  "httpClient": {
    "type": "",
    "retries": 3,
    "services": {
      "products": "https://localhost:5520"
    }
  },
  "logger": {
    "level": "information",
    "applicationName": "orders-service",
    "excludePaths": [ "/health", "/alive", "/metrics" ],
    "console": {
      "enabled": false
    },
    "file": {
      "enabled": true,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "token": "secret"
    }
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "orders",
    "endpoint": "http://localhost:4317",
    "protocol": "Grpc",
    "processorType": "Batch",
    "maxQueueSize": 2048,
    "scheduledDelayMilliseconds": 5000,
    "exporterTimeoutMilliseconds": 30000,
    "maxExportBatchSize": 512
  },
  "metrics": {
    "enabled": true,
    "influxEnabled": false,
    "prometheusEnabled": false,
    "prometheusFormatter": null,
    "influxUrl": "http://localhost:8086",
    "database": "test",
    "env": "local",
    "interval": 5
  },
  "mongodb": {
    "connectionString": "mongodb://localhost:27017",
    "database": "orders-service",
    "seed": false,
    "enableTracing": true
  },
  "prometheus": {
    "enabled": false
  },
  "rabbitMq": {
    "connectionName": "orders-service",
    "messagesPersisted": true,
    "retries": 3,
    "retryInterval": 2,
    "conventionsCasing": "snakeCase",
    "logger": {
      "enabled": true,
      "logConnectionStatus": true,
      "logMessagePayload": true
    },
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost",
      "rabbitmq"
    ],
    "requestedConnectionTimeout": "00:00:30",
    "requestedHeartbeat": "00:01:00",
    "socketReadTimeout": "00:00:30",
    "socketWriteTimeout": "00:00:30",
    "continuationTimeout": "00:00:20",
    "handshakeContinuationTimeout": "00:00:10",
    "networkRecoveryInterval": "00:00:05",
    "exchange": {
      "declare": true,
      "durable": true,
      "autoDelete": false,
      "type": "topic",
      "name": "orders"
    },
    "queue": {
      "declare": true,
      "durable": true,
      "exclusive": false,
      "autoDelete": false,
      "template": "{{assembly}}/{{exchange}}.{{message}}"
    },
    "context": {
      "enabled": true,
      "header": "message_context"
    },
    "spanContextHeader": "span_context",
    "deadLetter": {
      "enabled": true,
      "prefix": "dlx-",
      "declare": true
    },
    "maxProducerChannels": 1000
  },
  "swagger": {
    "enabled": true,
    "reDocEnabled": false,
    "name": "Orders",
    "title": "Orders Service",
    "version": "v002",
    "description": "Orders Service",
    "routePrefix": "swagger",
    "contactName": "Giovanni Nocco",
    "contactEmail": "giovanni.nocco@genocs.com",
    "contactUrl": "https://www.genocs.com",
    "licenseName": "MIT",
    "licenseUrl": "https://www.genocs.com/license.html",
    "termsOfService": "https://www.genocs.com/terms_and_conditions.html",
    "includeSecurity": true,
    "serializeAsOpenApiV2": true,
    "servers": [
      {
        "url": "http://localhost:5300",
        "description": "Local version to be used for development"
      },
      {
        "url": "http://fiscanner-api",
        "description": "Containerized version to be used into with docker or k8s"
      },
      {
        "url": "https://fiscanner-api.azurewebsites.net",
        "description": "Production deployed on Azure"
      }
    ]
  },
  "redis": {
    "connectionString": "localhost",
    "instance": "orders:"
  },
  "security": {
    "certificate": {
      "enabled": true,
      "header": "Certificate",
      "allowedHosts": [ "localhost", "order" ]
    }
  },
  "vault": {
    "enabled": true,
    "url": "http://localhost:8200",
    "authType": "token",
    "token": "secret",
    "username": "user",
    "password": "secret",
    "kv": {
      "enabled": false,
      "engineVersion": 2,
      "mountPoint": "kv",
      "path": "orders-service/settings"
    },
    "pki": {
      "enabled": false,
      "roleName": "orders-service",
      "commonName": "orders-service.convey.io"
    },
    "lease": {
      "mongo": {
        "type": "database",
        "roleName": "orders-service",
        "enabled": false,
        "autoRenewal": true,
        "templates": {
          "connectionString": "mongodb://{{username}}:{{password}}@localhost:27017"
        }
      }
    }
  },
  "webApi": {
    "bindRequestFromRoute": true
  }
}