        <ProjectReference Include="..\..\..\Genocs.MessageBrokers.RabbitMQ\Genocs.MessageBrokers.RabbitMQ.csproj" />
        <ProjectReference Include="..\..\..\Genocs.Metrics\Genocs.Metrics.csproj" />
